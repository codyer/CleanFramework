<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp"/>
            <gradient
                android:angle="270"
                android:centerColor="@color/main_white"
                android:endColor="@color/main_white"
                android:startColor="@color/main_white"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <gradient
                    android:centerColor="@color/main_blue"
                    android:endColor="@color/main_blue"
                    android:startColor="@color/main_blue"/>

            </shape>
        </clip>
    </item>

</layer-list>