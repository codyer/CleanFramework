<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 定义变量: tab index -->
        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.BargainCustomerViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_white"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:context="com.cody.app.business.customer.IntentionCustomerActivity">

        <include
            layout="@layout/fw_header"
            bind:onClickListener="@{onClickListener}"
            bind:viewModel="@{viewModel.headerViewModel}"/>


        <LinearLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimens_15dp">

            <FrameLayout
                android:layout_width="@dimen/dimens_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <CheckedTextView
                    android:id="@+id/orderTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:checked="true"
                    android:drawableRight="@drawable/ic_arrows_up_down_1"
                    android:gravity="center"
                    android:onClick="@{onClickListener::onClick}"
                    android:text="下单时间"
                    android:textAlignment="center"
                    android:textColor="@color/btn_blue_selector"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/dimens_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <CheckedTextView
                    android:id="@+id/orderAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:checked="@{viewModel.orderAmountStatus != 0}"
                    android:drawableRight="@drawable/ic_arrows_up_down_3"
                    android:gravity="center"
                    android:onClick="@{onClickListener::onClick}"
                    android:text="累计消费"
                    android:textAlignment="center"
                    android:textColor="@color/btn_blue_selector"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="@dimen/dimens_0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <CheckedTextView
                    android:id="@+id/recentBehavior"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:checked="@{viewModel.recentBehaviorStatus != 0}"
                    android:drawableRight="@drawable/ic_arrows_down_4"
                    android:gravity="center"
                    android:onClick="@{onClickListener::onClick}"
                    android:text="@{viewModel.recentBehavior}"
                    android:textAlignment="center"
                    android:textColor="@color/btn_blue_selector"
                    tools:text="最近行为"/>
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.cody.xf.widget.pullloadmorerecyclerview.PullLoadMoreRecyclerView
                android:id="@+id/fw_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_F5F5F5"/>

            <!--<include-->
            <!--android:id="@+id/bargainFilterLayout"-->
            <!--layout="@layout/item_bargain_filter" />-->
            <LinearLayout
                android:id="@+id/filterLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent_mask"
                android:onClick="@{onClickListener::onClick}"
                android:orientation="vertical"
                android:visibility="@{viewModel.filterLayoutShow?View.VISIBLE:View.GONE}">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_E1E1E1"/>

                <ListView
                    android:id="@+id/filterListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_white"
                    android:choiceMode="singleChoice"
                    android:divider="@color/gray_E1E1E1"
                    android:dividerHeight="1dp"/>

            </LinearLayout>

        </FrameLayout>

        <!--底部布局-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimens_15dp"
            android:paddingRight="@dimen/dimens_7dp"
            android:background="@drawable/ic_bottom_bg"
            android:visibility="@{viewModel.isSendCoupons ? View.VISIBLE :View.GONE}">

            <CheckedTextView
                android:id="@+id/checkAll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="@{viewModel.totalCheck}"
                android:drawableLeft="@drawable/btn_check_blue_selector"
                android:drawablePadding="@dimen/dimens_10dp"
                android:gravity="center"
                android:onClick="@{onClickListener::onClick}"
                android:text="@string/check_all"
                android:textColor="@color/gray_333333"/>

            <CheckedTextView
                android:id="@+id/unSendCoupons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimens_20dp"
                android:checked="@{viewModel.uncouponCheck}"
                android:drawableLeft="@drawable/btn_check_blue_selector"
                android:drawablePadding="@dimen/dimens_10dp"
                android:gravity="center"
                android:onClick="@{onClickListener::onClick}"
                android:text="未发券"
                android:textColor="@color/gray_333333"/>

            <android.support.v4.widget.Space
                android:layout_width="@dimen/dimens_0dp"
                android:layout_height="@dimen/dimens_0dp"
                android:layout_weight="1"/>

            <com.cody.xf.widget.CheckableTextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_confirm_blue_selector"
                android:checked="@{viewModel.checkCount != 0}"
                android:clickable="@{viewModel.checkCount != 0}"
                android:gravity="center"
                android:onClick="@{onClickListener::onClick}"
                android:text="@{viewModel.confirmBtnText}"
                android:textColor="@color/btn_white_selector"
                android:textSize="@dimen/font_17sp"/>
        </LinearLayout>
    </LinearLayout>
</layout>
