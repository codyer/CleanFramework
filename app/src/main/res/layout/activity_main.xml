<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.MainViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/mainRoot"
        android:background="@color/main_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mainBackground"
            android:layout_width="match_parent"
            android:layout_height="@{viewModel.imageHeight, default=@dimen/dimens_188dp}"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/main_background"
            tools:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/mainSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimens_7dp"
            android:contentDescription="@null"
            android:onClick="@{onClickListener::onClick}"
            android:padding="@dimen/dimens_8dp"
            android:src="@drawable/main_setting" />

        <LinearLayout
            android:id="@+id/mainTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dimens_15dp"
            android:paddingRight="@dimen/dimens_15dp"
            android:paddingTop="70dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imagePortrait"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:contentDescription="@null"
                    android:onClick="@{onClickListener::onClick}"
                    android:padding="@dimen/dimens_5dp"
                    android:scaleType="fitXY"
                    bind:error="@{@drawable/icon_guide_avatar}"
                    bind:imageUrl="@{viewModel.imageUrl}"
                    bind:placeholder="@{@drawable/icon_guide_avatar}"
                    tools:src="@drawable/icon_guide_avatar" />

                <ImageView
                    android:id="@+id/imagePortraitMask"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:alpha="0.6"
                    android:contentDescription="@null"
                    android:onClick="@{onClickListener::onClick}"
                    android:padding="@dimen/dimens_5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape_white_circle"
                    android:visibility="@{viewModel.online?View.GONE:View.VISIBLE}" />

                <ImageView
                    android:id="@+id/imageRank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imagePortrait"
                    android:contentDescription="@null"
                    android:src="@{viewModel.online?viewModel.rank:viewModel.rank}"
                    tools:src="@drawable/main_rank_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imagePortrait"
                    android:layout_centerHorizontal="true"
                    android:background="@{viewModel.online?@drawable/shape_yellow_c09d5b:@drawable/shape_gray_666666}"
                    android:paddingBottom="@dimen/dimens_1dp"
                    android:paddingLeft="@dimen/dimens_5dp"
                    android:paddingRight="@dimen/dimens_5dp"
                    android:paddingTop="@dimen/dimens_1dp"
                    android:text="@{viewModel.online?@string/online:@string/leave}"
                    android:textColor="@color/main_white"
                    android:textSize="@dimen/font_10sp"
                    tools:background="@drawable/shape_yellow_c09d5b"
                    tools:text="在线" />
            </RelativeLayout>

            <TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_weight="1"
                android:text="@{viewModel.userName}"
                android:textColor="@color/main_white"
                android:textSize="@dimen/font_15sp"
                tools:text="王丽丽" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@{viewModel.online}"
                android:textOff="@string/leave"
                android:textOn="@string/online"
                android:thumb="@drawable/switch_thumb_white"
                bind:showText="true"
                bind:switchTextAppearance="@style/SwitchAppearance"
                bind:track="@drawable/selector_switch_track" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/mainTabList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mainTop"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            bind:cardCornerRadius="@dimen/dimens_5dp"
            bind:cardElevation="@dimen/dimens_1dp"
            bind:cardMaxElevation="@dimen/dimens_2dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="@dimen/dimens_15dp"
                android:paddingStart="@dimen/dimens_15dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dimens_135dp">

                    <LinearLayout
                        android:id="@+id/mainMyCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimens_15dp"
                        android:background="@drawable/main_my_customer"
                        android:onClick="@{onClickListener::onClick}"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimens_6dp"
                        android:paddingLeft="@dimen/dimens_20dp"
                        android:paddingRight="@dimen/dimens_20dp"
                        android:paddingTop="@dimen/dimens_20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_my_customer"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_10dp"
                            android:alpha="0.6"
                            android:text="@string/main_my_customer_hint"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_11sp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/mainCustomerManage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimens_8dp"
                        android:background="@drawable/main_customer_manage"
                        android:onClick="@{onClickListener::onClick}"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimens_6dp"
                        android:paddingLeft="@dimen/dimens_20dp"
                        android:paddingRight="@dimen/dimens_20dp"
                        android:paddingTop="@{viewModel.unreadMsgCount>0?@dimen/dimens_12dp:@dimen/dimens_20dp}">

                        <TextView
                            android:id="@+id/mainCustomerManageTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_customer_message"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_20sp" />

                        <TextView
                            android:id="@+id/mainUnreadMsgCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/mainCustomerManageTitle"
                            android:background="@drawable/ease_unread_count_bg"
                            android:gravity="center"
                            android:text='@{viewModel.unreadMsgCount+""}'
                            android:textColor="@color/main_white"
                            android:textSize="@dimen/font_12sp"
                            android:visibility="@{viewModel.unreadMsgCount>0?View.VISIBLE:View.GONE}"
                            tools:text="5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mainCustomerManageTitle"
                            android:background="@drawable/main_im_backgroud"
                            android:visibility="@{viewModel.unreadMsgCount>0?View.VISIBLE:View.GONE}">

                            <com.cody.xf.widget.marqueen.MarqueeView
                                android:id="@+id/mainMarqueeView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimens_7dp"
                                android:flipInterval="3000"
                                android:gravity="center_vertical"
                                android:minHeight="@dimen/dimens_40dp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/mainCustomerManageTitle"
                            android:layout_marginTop="@dimen/dimens_10dp"
                            android:alpha="0.6"
                            android:text="@string/main_customer_manage_hint"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_11sp"
                            android:visibility="@{viewModel.unreadMsgCount>0?View.GONE:View.VISIBLE}" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/mainOrderManage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimens_8dp"
                        android:background="@drawable/main_order_manage"
                        android:onClick="@{onClickListener::onClick}"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimens_6dp"
                        android:paddingLeft="@dimen/dimens_20dp"
                        android:paddingRight="@dimen/dimens_20dp"
                        android:paddingTop="@dimen/dimens_20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_order_manage"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_10dp"
                            android:alpha="0.6"
                            android:text="@string/main_order_manage_hint"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mainActivityMarketing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimens_8dp"
                        android:background="@drawable/main_activity_marketing"
                        android:onClick="@{onClickListener::onClick}"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimens_6dp"
                        android:paddingLeft="@dimen/dimens_20dp"
                        android:paddingRight="@dimen/dimens_20dp"
                        android:paddingTop="@dimen/dimens_20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_activity_marketing"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_10dp"
                            android:alpha="0.6"
                            android:text="@string/main_activity_marketing_hint"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mainShopManage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimens_8dp"
                        android:background="@drawable/main_shop_manage"
                        android:onClick="@{onClickListener::onClick}"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimens_6dp"
                        android:paddingLeft="@dimen/dimens_20dp"
                        android:paddingRight="@dimen/dimens_20dp"
                        android:paddingTop="@dimen/dimens_20dp"
                        android:visibility="@{viewModel.shopManager?View.VISIBLE:View.GONE}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/main_shop_manage"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_10dp"
                            android:alpha="0.6"
                            android:text="@string/main_shop_manage_hint"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/font_11sp" />
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/shape_white_to_transparent"
                android:paddingTop="@dimen/dimens_40dp">

                <LinearLayout
                    android:id="@+id/mainScanButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/main_scan_button"
                    android:gravity="center"
                    android:onClick="@{onClickListener::onClick}"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dimens_5dp"
                        android:drawableTop="@drawable/scan"
                        android:gravity="center"
                        android:text="@string/main_scan"
                        android:textColor="@color/main_white"
                        android:textSize="@dimen/font_15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mainManualButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dimens_25dp"
                    android:drawablePadding="@dimen/dimens_5dp"
                    android:drawableTop="@drawable/main_manual_billing"
                    android:gravity="center"
                    android:onClick="@{onClickListener::onClick}"
                    android:padding="@dimen/dimens_15dp"
                    android:text="@string/main_manual"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/font_11sp" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>