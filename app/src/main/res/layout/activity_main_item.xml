<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <!--<variable-->
        <!--name="onClickListener"-->
        <!--type="android.view.View.OnClickListener" />-->

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.MainImItemViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dimens_7dp"
        android:paddingEnd="@dimen/dimens_10dp"
        android:paddingStart="@dimen/dimens_6dp"
        android:paddingTop="@dimen/dimens_7dp">

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            bind:error="@{@drawable/icon_custom_avatar}"
            bind:imageUrl="@{viewModel.imageUrl}"
            bind:placeholder="@{@drawable/icon_custom_avatar}"
            tools:src="@drawable/icon_custom_avatar" />

        <LinearLayout
            android:id="@+id/itemTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_6dp"
            android:layout_toEndOf="@+id/itemImage"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemName"
                style="@style/singleStyle"
                android:layout_weight="1"
                android:text="@{viewModel.name}"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_13sp"
                tools:text="王丽丽" />

            <TextView
                android:id="@+id/itemTime"
                style="@style/singleStyle"
                android:text="@{viewModel.timeString}"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/font_11sp"
                tools:text="10:53" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemTop"
            android:layout_marginLeft="@dimen/dimens_6dp"
            android:layout_marginRight="@dimen/dimens_6dp"
            android:layout_toEndOf="@+id/itemImage"
            android:ellipsize="end"
            android:lines="1"
            android:text="@{viewModel.content}"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/font_11sp"
            tools:text="你好，[图片]这款沙发现在有现货吗？" />
    </RelativeLayout>
</layout>