<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.MiniAppViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        android:orientation="vertical">

        <include
            android:id="@+id/fw_header"
            layout="@layout/fw_header"
            bind:onClickListener="@{onClickListener}"
            bind:viewModel="@{viewModel.headerViewModel}" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fw_header"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:layout_marginRight="@dimen/dimens_20dp"
            android:layout_marginTop="@dimen/dimens_40dp"
            bind:cardCornerRadius="@dimen/dimens_5dp"
            bind:cardElevation="@dimen/dimens_1dp"
            bind:cardMaxElevation="@dimen/dimens_2dp">

            <ImageView
                android:id="@+id/qrCode"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginBottom="80dp"
                android:layout_marginTop="80dp"
                android:contentDescription="@null"
                tools:src="@drawable/qr_code" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimens_25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shareMiniApp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableTop="@drawable/icon_weixin"
                android:gravity="center"
                android:text="@string/share_mini_app"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_15sp"
                bind:onClickListener="@{onClickListener}" />

            <TextView
                android:id="@+id/saveToAlbum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/dimens_5dp"
                android:drawableTop="@drawable/icon_download"
                android:gravity="center"
                android:text="@string/save_to_album"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_15sp"
                bind:onClickListener="@{onClickListener}" />
        </LinearLayout>

    </RelativeLayout>

</layout>