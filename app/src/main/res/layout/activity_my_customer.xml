<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.MyCustomerViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/mainRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@{viewModel.imageHeight, default=@dimen/dimens_188dp}"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/my_customer_background"
            tools:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:onClick="@{onClickListener::onClick}"
            android:padding="@dimen/dimens_8dp"
            android:src="@drawable/xf_ic_back_white" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/dimens_8dp"
            android:text="@string/main_my_customer"
            android:textColor="@color/main_white"
            android:textSize="@dimen/font_17sp" />

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/backBtn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/dataBoard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_15dp"
                    android:layout_marginRight="@dimen/dimens_15dp"
                    android:layout_marginTop="@dimen/dimens_40dp"
                    bind:cardCornerRadius="@dimen/dimens_5dp"
                    bind:cardElevation="@dimen/dimens_1dp"
                    bind:cardMaxElevation="@dimen/dimens_2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/dimens_20dp"
                        android:paddingTop="@dimen/dimens_20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingEnd="@dimen/dimens_5dp"
                                android:paddingStart="@dimen/dimens_5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="@{viewModel.totalCustomer}"
                                    android:textColor="@color/gray_333333"
                                    android:textSize="@dimen/font_18sp"
                                    tools:text="580" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimens_8dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="@string/total_customer"
                                    android:textColor="@color/gray_666666"
                                    android:textSize="@dimen/font_13sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/dimens_12dp"
                                android:layout_marginTop="@dimen/dimens_12dp"
                                android:background="@color/gray_E4E4E4" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingEnd="@dimen/dimens_5dp"
                                android:paddingStart="@dimen/dimens_5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="@{viewModel.newCustomerInMonth}"
                                    android:textColor="@color/gray_333333"
                                    android:textSize="@dimen/font_18sp"
                                    tools:text="580" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimens_8dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="@string/new_customer_in_month"
                                    android:textColor="@color/gray_666666"
                                    android:textSize="@dimen/font_13sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimens_20dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingEnd="@dimen/dimens_5dp"
                                android:paddingStart="@dimen/dimens_5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="@{viewModel.marketingInMonth}"
                                    android:textColor="@color/gray_333333"
                                    android:textSize="@dimen/font_18sp"
                                    tools:text="580" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimens_8dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="@string/marketing_in_month"
                                    android:textColor="@color/gray_666666"
                                    android:textSize="@dimen/font_13sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/dimens_12dp"
                                android:layout_marginTop="@dimen/dimens_12dp"
                                android:background="@color/gray_E4E4E4" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingEnd="@dimen/dimens_5dp"
                                android:paddingStart="@dimen/dimens_5dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="@{viewModel.salesConversion}"
                                    android:textColor="@color/gray_333333"
                                    android:textSize="@dimen/font_18sp"
                                    tools:text="580" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimens_8dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="@string/sales_conversion"
                                    android:textColor="@color/gray_666666"
                                    android:textSize="@dimen/font_13sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimens_25dp"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/dimens_20dp"
                    android:paddingStart="@dimen/dimens_20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/customer_class"
                        android:textColor="@color/gray_333333"
                        android:textSize="@dimen/font_20sp" />

                    <include
                        android:id="@+id/potentialCustomer"
                        layout="@layout/activity_my_customer_item"
                        bind:onClickListener="@{onClickListener}"
                        bind:viewModel="@{viewModel.potentialCustomer}" />

                    <include
                        android:id="@+id/intentCustomer"
                        layout="@layout/activity_my_customer_item"
                        bind:onClickListener="@{onClickListener}"
                        bind:viewModel="@{viewModel.intentCustomer}" />

                    <include
                        android:id="@+id/bargainCustomer"
                        layout="@layout/activity_my_customer_item"
                        bind:onClickListener="@{onClickListener}"
                        bind:viewModel="@{viewModel.bargainCustomer}" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</layout>