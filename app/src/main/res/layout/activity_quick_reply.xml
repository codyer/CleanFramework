<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.QuickReplyViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray">

        <include
            android:id="@+id/title_bar"
            layout="@layout/fw_header"
            bind:onClickListener="@{onClickListener}"
            bind:viewModel="@{viewModel.headerViewModel}"/>

        <LinearLayout
            android:id="@+id/ll_quick_reply_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_bar"
            android:gravity="center_vertical"
            android:background="@color/main_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quick_reply_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dimens_15dp"
                android:text="@{viewModel.title}"
                android:onClick="@{onClickListener::onClick}"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_16sp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_7dp"
                android:layout_marginEnd="@dimen/dimens_15dp"
                android:layout_marginTop="@dimen/dimens_7dp"
                android:checked="@{viewModel.enable}"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:layout_below="@+id/ll_quick_reply_title"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@color/main_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/main_white"
                    android:maxLength="500"
                    android:text="@={viewModel.content}"
                    android:padding="@dimen/dimens_16dp"/>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>