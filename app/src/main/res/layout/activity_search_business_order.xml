<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data name="ListWithSearchBinding">

        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.SearchBusinessOrderViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        android:orientation="vertical">

        <include
            android:id="@+id/header"
            layout="@layout/header_search_with_cancel"
            bind:onClickListener="@{onClickListener}"
            bind:viewModel="@{viewModel.searchViewModel}" />

        <com.cody.xf.widget.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/fw_list"
            style="@style/ListViewNormalStyle" />

    </LinearLayout>

</layout>
