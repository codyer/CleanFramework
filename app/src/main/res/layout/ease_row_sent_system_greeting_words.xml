<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.ItemMessageViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dimens_5dp"
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/timestamp"
            style="@style/chat_text_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.timeStamp}"
            android:visibility="@{viewModel.showTimeStamp?View.VISIBLE:View.GONE}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_16dp"
            android:gravity="right">

            <android.support.v4.widget.Space
                android:layout_width="51dp"
                android:layout_height="1dp"/>

            <include
                layout="@layout/include_message_status_not_pronum"
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                bind:onClickListener="@{onClickListener}"
                bind:viewModel="@{viewModel}"/>

            <LinearLayout
                android:id="@+id/bubble"
                style="@style/sendBubbleStyle"
                android:layout_toLeftOf="@id/iv_userhead"
                android:layout_toRightOf="@+id/statusLayout"
                android:background="@drawable/ic_msg_send_bg_white"
                android:paddingEnd="@dimen/dimens_15dp"
                android:paddingStart="@dimen/dimens_15dp">

                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_sys_wel_words"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="@dimen/dimens_6dp"
                        android:paddingBottom="@dimen/dimens_6dp"
                        android:text="@{viewModel.imSysWelWordsViewModel.sysWordsStr}"
                        tools:text="您好，欢迎光临本店"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_sys_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_10dp"
                        android:visibility="@{viewModel.imSysWelWordsViewModel.hasGoods() ? View.VISIBLE : View.GONE}"
                        tools:visibility="visible"/>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_userhead"
                android:layout_width="@dimen/dimens_40dp"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dimens_16dp"
                android:onClick="@{onClickListener::onClick}"
                android:scaleType="fitXY"
                tools:src="@drawable/icon_guide_avatar"
                bind:error="@{@drawable/icon_guide_avatar}"
                bind:imageUrl="@{viewModel.userAvatar}"
                bind:placeholder="@{@drawable/icon_guide_avatar}"/>
        </LinearLayout>

    </LinearLayout>
</layout>