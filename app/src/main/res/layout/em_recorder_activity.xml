<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <VideoView
            android:id="@+id/mVideoView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_video"/>


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_close" />

        <ImageView
            android:id="@+id/iv_switch"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_switch"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轻触拍摄，长按录制"
            android:layout_above="@+id/rl_recorder"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:textColor="@color/main_white"
            />

        <RelativeLayout
            android:id="@+id/rl_recorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp">

            <RelativeLayout
                android:id="@+id/rl_recorder_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <com.cody.app.business.widget.roundprogressbar.RoundProgressBar
                    android:id="@+id/roundProgressBar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <View
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_round_white"/>

            </RelativeLayout>



            <ImageView
                android:id="@+id/iv_video_back"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_video_back"
                android:layout_alignParentStart="true"
                android:layout_marginStart="55dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_video_ok"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_video_ok"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="55dp"
                android:visibility="gone"
                />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>