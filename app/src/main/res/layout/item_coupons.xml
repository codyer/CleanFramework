<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.CouponViewModel"/>
    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_100dp"
        android:layout_marginEnd="@dimen/dimens_15dp"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_12dp"
        android:background="@drawable/shape_white_radius"
        android:clickable="@{viewModel.enough}">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimens_10dp"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            bind:error="@{@drawable/ic_placeholder_square}"
            bind:placeholder="@{@drawable/ic_placeholder_square}"
            bind:rectImageUrl="@{viewModel.imageUrl}"
            tools:src="@drawable/xf_ic_placeholder_square"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_13dp"
            android:background="@drawable/ic_coupons_tag_bg"
            android:gravity="center"
            android:text="自建"
            android:textColor="@color/main_white"
            android:textSize="10sp"
            android:visibility="@{viewModel.visibleTag?View.VISIBLE:View.GONE}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/iv_logo"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.ownerName}"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/font_14sp"
                    tools:text="平台券"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_4dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="@{viewModel.name}"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/font_12sp"
                    tools:text="促销优惠券促销优惠券促销优惠券促销优惠券促销优惠券促销优惠券"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="@{viewModel.discount}"
                        android:textColor="@color/gold_dfaf7d"
                        android:textSize="@dimen/font_18sp"
                        tools:text="9.5折"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dimens_6dp"
                        android:background="@drawable/shape_gold"
                        android:ellipsize="end"
                        android:lines="1"
                        android:padding="@dimen/dimens_2dp"
                        android:text="@{viewModel.conditions}"
                        android:textColor="@color/gray_999999"
                        android:textSize="@dimen/font_12sp"
                        tools:text="满10000立减满10000立减"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_coupon_line"/>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:background="@{viewModel.isSelected?@drawable/ic_checked_blue:@drawable/ic_unchecked_white}"/>

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radio"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:text="@{viewModel.remainingCount}"
                    android:textColor="@{viewModel.enough?@color/gray_333333:@color/red}"
                    android:textSize="@dimen/font_11sp"
                    tools:text="剩余100"/>

                <ProgressBar
                    style="@style/progressbar_horizontal_style"
                    android:layout_width="@dimen/dimens_60dp"
                    android:layout_height="@dimen/dimens_6dp"
                    android:layout_below="@+id/tv_num"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_6dp"
                    android:max="100"
                    android:secondaryProgress="@{viewModel.usedPercentage}"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>