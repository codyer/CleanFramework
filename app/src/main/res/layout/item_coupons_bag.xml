<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.CouponViewModel"/>
    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_100dp"
        android:layout_marginEnd="@dimen/dimens_15dp"
        android:layout_marginStart="@dimen/dimens_15dp"
        android:layout_marginTop="@dimen/dimens_12dp"
        android:background="@drawable/shape_white_radius">

        <TextView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimens_10dp"
            android:drawablePadding="@dimen/dimens_3dp"
            android:drawableTop="@drawable/ic_coupons_bag"
            android:gravity="center_horizontal"
            android:text="@{viewModel.numberOfCoupons}"
            android:textColor="@color/gold_dfaf7d"
            android:textSize="@dimen/font_11sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/iv_logo"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.ownerName}"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/font_14sp"
                    tools:text="平台券"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimens_8dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="@{viewModel.name}"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/font_12sp"
                    tools:text="促销优惠券促销优惠券促销优惠券促销优惠券促销优惠券促销优惠券"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_coupon_line"/>

            <RelativeLayout
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimens_10dp"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:background="@{viewModel.isSelected?@drawable/ic_checked_blue:@drawable/ic_unchecked_white}"/>

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radio"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:text="@{viewModel.remainingCount}"
                    android:textColor="@{viewModel.enough?@color/gray_333333:@color/red}"
                    android:textSize="@dimen/font_11sp"
                    tools:text="剩余100"/>

                <ProgressBar
                    style="@style/progressbar_horizontal_style"
                    android:layout_width="@dimen/dimens_60dp"
                    android:layout_height="@dimen/dimens_6dp"
                    android:layout_below="@+id/tv_num"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimens_6dp"
                    android:max="100"
                    android:secondaryProgress="@{viewModel.usedPercentage}"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>