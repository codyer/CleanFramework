<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 定义变量: -->
        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.ItemCouponFailViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_white"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_E1E1E1"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:visibility="@{viewModel.showViewLine?View.VISIBLE:View.GONE}"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.phoneStr}"
                tools:text="136****1234"
                android:layout_marginLeft="@dimen/dimens_20dp"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/gray_333333"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送失败"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimens_20dp"
                android:textSize="@dimen/font_14sp"
                android:textColor="@color/main_blue"
                android:layout_marginRight="@dimen/dimens_15dp"
                />


        </RelativeLayout>




    </LinearLayout>





</layout>
