<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 定义变量: -->
        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.ItemGoodsOrderViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_touch_selector"
            android:orientation="vertical"
            android:padding="@dimen/dimens_20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextBlackStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{viewModel.userName}"
                    tools:text="@string/customer_name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.orderStatusDesc}"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/font_13sp"
                    tools:text="已支付"/>
            </LinearLayout>

            <TextView
                style="@style/TextGrayNormalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimens_20dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:drawableLeft="@drawable/ic_shoujihaoma"
                android:text="@{viewModel.userMobile}"
                tools:text="188865432201"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextGrayNormalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号："/>

                <TextView
                    style="@style/TextGrayNormalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.orderId}"
                    tools:text="41646787"/>
            </LinearLayout>

            <TextView
                style="@style/TextGrayNormalStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{viewModel.goodsName}"
                tools:text="箭牌水龙头"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextGrayNormalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:text="数量："/>

                <TextView
                    style="@style/TextGrayNormalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.quantity}"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextGrayNormalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimens_10dp"
                    android:text="订单金额："/>

                <TextView
                    style="@style/TextGrayNormalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimens_10dp"
                    android:text="@{viewModel.payableAmount}"
                    android:textColor="@color/main_blue"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextGrayNormalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已付金额："/>

                <TextView
                    style="@style/TextBlackNormalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.paidAmount}"
                    android:textColor="@color/main_blue"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/background_gray"/>

    </LinearLayout>

</layout>