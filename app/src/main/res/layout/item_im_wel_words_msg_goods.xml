<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.ItemMessageViewModel.SysWelWordsMessageViewModel.ItemSysWelWordsMessageViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/layout_wel_words_goods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimens_10dp"
        android:background="@drawable/shape_rect_gray"
        android:orientation="vertical"
        android:padding="@dimen/dimens_15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/iv_goods_icon"
                android:maxLines="2"
                android:text="@{viewModel.merchandiseName}"
                android:textColor="#333333"
                android:textSize="@dimen/font_15sp"
                tools:text="欧兰美"/>

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_goods_icon"
                android:layout_alignStart="@+id/tv_goods_title"
                android:text='@{String.format("¥%s",viewModel.merchandisePrice)}'
                android:textColor="@color/main_blue"
                android:textSize="@dimen/font_15sp"
                tools:text="¥999"/>

            <ImageView
                android:id="@+id/iv_goods_icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/dimens_10dp"
                android:scaleType="fitXY"
                tools:src="@drawable/ease_default_image"
                bind:error="@{@drawable/ease_default_image}"
                bind:placeholder="@{@drawable/ease_default_image}"
                bind:rectImageUrl="@{viewModel.imageUrl}"/>

        </RelativeLayout>
    </LinearLayout>
</layout>




