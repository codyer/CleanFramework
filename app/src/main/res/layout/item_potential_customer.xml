<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 定义变量: -->
        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.ItemPotentialCustomerViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_white"
        android:onClick="@{onClickListener::onClick}"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:visibility="@{viewModel.isSendCoupons?View.VISIBLE:View.GONE}"
            tools:visibility="visible">

            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimens_15dp"
                android:background="@drawable/btn_check_blue_selector"
                android:checked="@{viewModel.check}"
                tools:checked="true"/>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="@{viewModel.itemWidth, default=@dimen/dimens_375dp}"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dimens_15dp"
            android:paddingTop="@dimen/dimens_13dp"
            tools:layout_width="@dimen/dimens_375dp">

            <ImageView
                android:id="@+id/iv_userhead"
                android:layout_width="@dimen/dimens_40dp"
                android:layout_height="@dimen/dimens_40dp"
                android:onClick="@{onClickListener::onClick}"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/dimens_10dp"
                android:scaleType="fitXY"
                bind:error="@{@drawable/icon_custom_avatar}"
                bind:imageUrl="@{viewModel.avatar}"
                bind:placeholder="@{@drawable/icon_custom_avatar}"
                tools:src="@drawable/icon_custom_avatar"/>

            <TextView
                android:layout_width="@dimen/dimens_25dp"
                android:layout_height="@dimen/dimens_12dp"
                android:layout_alignRight="@+id/iv_userhead"
                android:layout_alignTop="@+id/iv_userhead"
                android:background="@drawable/btn_red_shape"
                android:gravity="center"
                android:text="NEW"
                android:textColor="@color/main_white"
                android:textSize="8sp"
                android:visibility="@{viewModel.isNew?View.VISIBLE:View.GONE}"/>

            <TextView
                android:id="@+id/telPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_userhead"
                android:includeFontPadding="false"
                android:text="@{viewModel.mobile}"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_15sp"
                tools:text="136****4057"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_4dp"
                android:layout_toRightOf="@+id/telPhone"
                android:src="@{viewModel.gender == 0?@drawable/ic_women:@drawable/ic_man}"
                android:visibility="@{viewModel.gender == -1 ? View.GONE:View.VISIBLE}"
                tools:src="@drawable/ic_women"/>

            <CheckedTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimens_15dp"
                android:checked="@{viewModel.sendCouponCount == 0}"
                android:text="@{viewModel.sendCouponText}"
                android:textColor="@color/btn_blue_selector"
                tools:text="未发劵"/>

            <LinearLayout
                android:id="@+id/flagLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/telPhone"
                android:layout_below="@id/telPhone"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="@{viewModel.showPotentialFlagLayout()?View.VISIBLE:View.GONE}"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/browseShop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浏览店铺"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/font_13sp"
                    android:visibility="@{viewModel.scanShopFlag?View.VISIBLE:View.GONE}"
                    tools:visibility="visible"/>

                <FrameLayout
                    android:id="@+id/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.showPotentialFlagLine()?View.VISIBLE:View.GONE}"
                    tools:visibility="visible">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/dimens_10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimens_6dp"
                        android:layout_marginRight="@dimen/dimens_6dp"
                        android:background="@color/gray_E1E1E1"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/browseGoodFlag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="浏览单品"
                    android:textColor="@color/gray_999999"
                    android:textSize="@dimen/font_13sp"
                    android:visibility="@{viewModel.scanGoodsFlag?View.VISIBLE:View.GONE}"
                    tools:visibility="visible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lastBrowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/telPhone"
                android:layout_below="@id/flagLayout"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:includeFontPadding="false"
                android:text="@{viewModel.lastBrowseTimeText}"
                android:textColor="@color/gray_999999"
                android:textSize="@dimen/font_13sp"
                tools:text="最后一次浏览时间 2018.3.20 16:54"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/lastBrowTime"
                android:layout_marginTop="@dimen/dimens_15dp"
                android:layout_toRightOf="@id/iv_userhead"
                android:background="@color/gray_f2f2f2"/>

        </RelativeLayout>

    </LinearLayout>
</layout>