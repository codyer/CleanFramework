<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 定义变量: -->
        <import type="android.view.View" />

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.ItemPromotionViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:orientation="vertical">

        <LinearLayout
            style="@style/itemStyle"
            android:layout_marginLeft="@dimen/dimens_10dp"
            android:layout_marginRight="@dimen/dimens_10dp"
            android:layout_marginTop="@dimen/dimens_6dp"
            android:background="@drawable/shape_white_round_3dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimens_12dp"
            android:paddingRight="@dimen/dimens_12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/promotionName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{viewModel.activityName}"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/font_15sp"
                    android:textStyle="bold"
                    tools:text="双十一科勒劲爆内部价" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchOpen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="@{viewModel.checked}" />
            </LinearLayout>

            <View style="@style/style_dividing_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_15dp"
                android:text="@{viewModel.totalTimes}"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/font_13sp"
                tools:text="累计访问：10天12小时50分" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_15dp"
                android:text="@{viewModel.totalVisitCount}"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/font_13sp"
                tools:text="累计访问次数：1000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_15dp"
                android:text="@{viewModel.totalVisitCustomers}"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/font_13sp"
                tools:text="访客人数：800" />

            <View
                style="@style/style_dividing_line"
                android:layout_marginTop="@dimen/dimens_15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimens_6dp"
                android:paddingTop="@dimen/dimens_6dp">

                <TextView
                    android:id="@+id/share"
                    android:layout_width="75dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@{viewModel.checked?@drawable/bg_btn_pay:@drawable/bg_btn_gray999}"
                    android:enabled="@{viewModel.checked}"
                    android:gravity="center"
                    android:onClick="@{onClickListener::onClick}"
                    android:text="@string/share"
                    android:textColor="@{viewModel.checked?@color/main_blue:@color/gray_999999}"
                    android:textSize="@dimen/font_15sp" />

                <TextView
                    android:id="@+id/preview"
                    android:layout_width="75dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimens_10dp"
                    android:layout_toStartOf="@+id/share"
                    android:background="@drawable/bg_btn_pay"
                    android:gravity="center"
                    android:onClick="@{onClickListener::onClick}"
                    android:text="@string/preview"
                    android:textColor="@color/main_blue"
                    android:textSize="@dimen/font_15sp" />

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</layout>
