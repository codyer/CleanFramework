<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 定义变量: -->
        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.business.viewmodel.ItemTagViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.isFirstItem()?View.GONE:View.VISIBLE}">

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/dimens_10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimens_6dp"
                android:layout_marginRight="@dimen/dimens_6dp"
                android:background="@color/gray_E1E1E1"/>

        </FrameLayout>

        <TextView
            android:id="@+id/browseShopFlag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.value}"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/font_13sp"
            tools:text="加购物车"
            tools:visibility="visible"/>
    </LinearLayout>
</layout>