<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class="RecycleLoadMoreWithHeaderSearchBinding">

        <import type="android.view.View"/>

        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>

        <variable
            name="viewModel"
            type="com.cody.handler.framework.viewmodel.common.ListViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_transparent"
        android:orientation="vertical">

        <include
            layout="@layout/include_magic_header"
            bind:onClickListener="@{onClickListener}"
            bind:viewModel="@{viewModel.headerViewModel}"/>

        <com.cody.app.framework.widget.SearchEditView
            android:id="@+id/searchView"
            style="@style/editSearchStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@{viewModel.hint}"
            android:text="@={viewModel.keyWord}"
        />

        <com.cody.xf.widget.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/pullLoadMoreRecyclerView"
            style="@style/ListViewNormalStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</layout>