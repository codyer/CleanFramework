<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_wel_words_goods"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimens_10dp"
    android:background="@drawable/shape_rect_gray"
    android:orientation="vertical"
    android:padding="@dimen/dimens_15dp"
    android:visibility="gone"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_goods_icon"
            android:maxLines="2"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/font_15sp"
            tools:text="欧兰美"/>

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_goods_icon"
            android:layout_alignStart="@+id/tv_goods_title"
            android:text=""
            android:textColor="@color/main_blue"
            android:textSize="@dimen/font_15sp"
            tools:text="￥999"/>

        <ImageView
            android:id="@+id/iv_goods_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dimens_10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ease_default_image"/>

    </RelativeLayout>
</LinearLayout>




