<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 通用编辑框样式-->
    <style name="EditStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/info_gray</item>
        <item name="android:textSize">@dimen/font_size_24</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="editSearchStyle" parent="EditStyle">
        <item name="android:background">@color/background_gray</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <!-- header container style for header container-->
    <style name="headerLayoutStyle">
        <item name="android:background">@drawable/fw_header_with_line_touch_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
    </style>

    <!-- item with bottom line and with click reflect style -->
    <style name="itemWithLineStyle">
        <item name="android:background">@drawable/fw_item_with_line_touch_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:paddingTop">@dimen/middle_padding</item>-->
        <!--<item name="android:paddingBottom">@dimen/middle_padding</item>-->
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- back button style -->
    <style name="headerButtonStyle">
        <item name="android:background">@drawable/fw_header_touch_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <!-- header style for textView-->
    <style name="headerStyle">
        <item name="android:background">@drawable/fw_header_with_line_touch_selector</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:textSize">@dimen/font_size_36</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- base 单行样式-->
    <style name="singleStyle">
        <item name="android:textColor">@color/other_gray</item>
        <item name="android:ellipsize">end</item>
        <!--<item name="android:maxEms">10</item>-->
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 主标题 样式-->
    <style name="mainTitleStyle" parent="singleStyle">
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:textSize">@dimen/font_size_36</item>
    </style>

    <!-- 副标题 样式-->
    <style name="subTitleStyle" parent="mainTitleStyle">
        <item name="android:textSize">@dimen/font_size_32</item>
    </style>

    <!--tab 字体样式-->
    <style name="tabTextStyle" parent="TextAppearance.Design.Tab">
        <!--Tab字体的大小-->
        <item name="android:textSize">@dimen/font_size_32</item>
        <!--Tab字体的默认的颜色-->
        <item name="android:textColor">@color/main_gray</item>
        <!--Tab字体是否为大写-->
        <item name="textAllCaps">true</item>
    </style>

    <!--tab 样式-->
    <style name="tabLayoutStyle" parent="Widget.Design.TabLayout">
        <!--tab 下划线-->
        <item name="android:background">@drawable/fw_bg_with_bottom_line</item>
        <!--tab的宽度-->
        <item name="android:layout_width">match_parent</item>
        <!--tab的高度-->
        <item name="android:layout_height">@dimen/tap_height</item>
        <!--tab的最大的宽度-->
        <item name="tabMaxWidth">@dimen/design_tab_max_width</item>
        <!--tab指示标的颜色-->
        <item name="tabIndicatorColor">@color/main_blue</item>
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">@dimen/tap_divider_height</item>
        <!--tab字体的样式-->
        <item name="tabTextAppearance">@style/tabTextStyle</item>
        <!--tab 选中时的颜色-->
        <item name="tabSelectedTextColor">@color/main_blue</item>
        <!--tab 可scroll-->
        <item name="tabMode">scrollable</item>
    </style>

    <!-- 主要正文 样式-->
    <style name="infoStyle" parent="singleStyle">
        <item name="android:textColor">@color/other_gray</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>

    <!-- 普通正文 样式-->
    <style name="subInfoStyle" parent="singleStyle">
        <item name="android:textSize">@dimen/font_size_26</item>
        <item name="android:textColor">@color/info_gray</item>
    </style>

    <!-- 普通辅文 样式-->
    <style name="subLightInfoStyle" parent="subInfoStyle">
        <item name="android:textColor">@color/info_gray</item>
    </style>


    <!-- 普通正文 蓝色样式-->
    <style name="subInfoBlueStyle" parent="singleStyle">
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textSize">@dimen/font_size_26</item>
    </style>

    <style name="subInfoBigBlueStyle" parent="singleStyle">
        <item name="android:textColor">@color/main_blue</item>
        <item name="android:textSize">@dimen/font_size_48</item>
    </style>

    <!-- 小字正文 样式-->
    <style name="subSmallInfoStyle" parent="singleStyle">
        <item name="android:textSize">@dimen/font_size_24</item>
    </style>

    <!-- List的item 样式-->
    <style name="itemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <!--<item name="android:paddingTop">@dimen/list_item_margin</item>-->
        <!--<item name="android:paddingBottom">@dimen/list_item_margin</item>-->
        <item name="android:background">@drawable/fw_item_touch_selector</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
    </style>

    <!--通用文字样式-->
    <style name="TextBlackStyle">
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:textSize">@dimen/font_size_32</item>
    </style>
    <!--通用文字样式-->
    <style name="TextGrayStyle">
        <item name="android:textColor">@color/other_gray</item>
        <item name="android:textSize">@dimen/font_size_32</item>
    </style>

    <!--通用文字样式-->
    <style name="TextLBlackStyle">
        <item name="android:textColor">@color/main_gray</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>
    <!--通用文字样式-->
    <style name="TextLGrayStyle">
        <item name="android:textColor">@color/other_gray</item>
        <item name="android:textSize">@dimen/font_size_30</item>
    </style>

    <style name="managerStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/fw_item_touch_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  添加通用列表样式 -->
    <style name="ListViewNormalStyle">
        <item name="android:cacheColorHint">@color/main_white</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:divider">@color/line_gray</item>
    </style>
</resources>
