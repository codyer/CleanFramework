<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="xf_picker_view">
        <attr name="xf_picker_view_gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="xf_picker_view_text_size" format="dimension"/>
        <attr name="xf_picker_view_text_color_out" format="color"/>
        <attr name="xf_picker_view_text_color_center" format="color"/>
        <attr name="xf_picker_view_divider_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="xf_Banner">
        <attr name="xf_interval" format="integer"/>
        <attr name="xf_showIndicator" format="boolean"/>
        <attr name="xf_autoPlaying" format="boolean"/>
        <attr name="xf_indicatorSelectedSrc" format="color|reference"/>
        <attr name="xf_indicatorUnselectedSrc" format="color|reference"/>
        <attr name="xf_indicatorSize" format="dimension|reference"/>
        <attr name="xf_indicatorSpace" format="dimension|reference"/>
        <attr name="xf_indicatorMargin" format="dimension|reference"/>
        <attr name="xf_indicatorGravity" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="xf_RatioImageView">
        <attr name="xf_ratio" format="float"/>
    </declare-styleable>

    <declare-styleable name="xf_IndexBar">
        <attr name="xf_indexBarTextSize" format="dimension"/>
        <attr name="xf_indexBarPressBackground" format="color"/>
    </declare-styleable>

    <declare-styleable name="xf_SliderLayout">
        <attr name="xf_slider_pic" format="reference"/>
    </declare-styleable>

    <!--apsts-->
    <declare-styleable name="xf_TabLayout">
        <attr name="xf_TabIndicatorColor" format="color"/>
        <attr name="xf_TabUnderlineColor" format="color"/>
        <attr name="xf_TabDividerColor" format="color"/>
        <attr name="xf_TabTextSelectColor" format="color"/>
        <attr name="xf_TabIndicatorHeight" format="dimension"/>
        <attr name="xf_TabUnderlineHeight" format="dimension"/>
        <attr name="xf_TabDividerPadding" format="dimension"/>
        <attr name="xf_TabPaddingLeftRight" format="dimension"/>
        <attr name="xf_TabPaddingTopBottom" format="dimension"/>
        <attr name="xf_TabScrollOffset" format="dimension"/>
        <attr name="xf_TabBackground" format="reference"/>
        <attr name="xf_TabShouldExpand" format="boolean"/>
        <attr name="xf_TabTextAllCaps" format="boolean"/>
        <attr name="xf_TabDrawMode" format="enum">
            <enum name="normal" value="0"/>
            <enum name="text" value="1"/>
        </attr>
    </declare-styleable>

</resources>