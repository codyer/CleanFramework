<resources>
    <!-- Base application theme. -->
    <style name="xf_AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/xf_cold_launch</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 自定义仿IOS的AlertDialog的样式 -->
    <style name="xf.AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 自定义仿IOS的ActionSheet底部Dialog的样式 ，有模糊效果 -->
    <style name="xf.ActionSheetDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/xf.ActionSheetDialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="xf.ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/xf_action_sheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/xf_action_sheet_dialog_out</item>
    </style>

    <style name="xf.AnimUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/xf_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/xf_push_bottom_out</item>
    </style>

    <style name="xf.AnimDown" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/xf_push_scale_in</item>
        <item name="android:windowExitAnimation">@anim/xf_push_scale_out</item>
    </style>

    <style name="xf.AnimHorizontal" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/xf_push_scale_left_in</item>
        <item name="android:windowExitAnimation">@anim/xf_push_scale_left_out</item>
    </style>

    <style name="xf.AnimRight" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/xf_push_scale_right_in</item>
        <item name="android:windowExitAnimation">@anim/xf_push_scale_right_out</item>
    </style>

</resources>
